<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eWebshop</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">eWebshop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
              <a class="nav-link " asp-controller="Home" asp-action="Index">Home</a>
            <span class="visually-hidden">(current)</span>
        </li>
        <li class="nav-item">
              <a class="nav-link " asp-controller="Home" asp-action="Privacy">Privacy</a>
            <span class="visually-hidden">(current)</span>
        </li>
        <li class="nav-item">
          <a class="nav-link " asp-controller="Category" asp-action="Index">Category</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " asp-controller="User" asp-action="Index">User</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " asp-controller="ToDoItems" asp-action="Index">To do items</a>
        </li>
       </ul>
    </div>
    <div class="text-right" id="navbarColor01">
        <ul class="navbar-nav me-auto ">
            <li class="nav-item">
             @if(User.Identity.IsAuthenticated)
                 {
                     <a class="nav-link btn btn-info" style="width:120px" id="qsLogoutBtn" asp-controller="Home" asp-action="Logout">Logout</a>
                 }
             else
                 {
                     <a class="nav-link btn btn-info" style="width:120px" id="qsLogoutBtn" asp-controller="Home" asp-action="Login">Login</a>
                 }
            </li>
        </ul>
    </div>
  </div>
</nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification"></partial>
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-text-muted bg-dark">
        <div class="container">
            &copy; 2022 - Website - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
