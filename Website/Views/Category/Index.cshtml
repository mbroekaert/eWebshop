@model List<CategoryDto>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-bookmark-plus"></i>&nbsp; Create new category</a>
        </div>
    </div>
    <br /><br />


<h1>Index Category</h1>
<table class ="table table-table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
    {
        <tr>
            <td width="10%">
                @category.Id
            </td>
            <td width="50%">
                @category.Name
            </td>
            <td width="10%">
                @category.DisplayOrder
            </td>
        </tr>
    }
 </table>   
    </tbody>
</div>

