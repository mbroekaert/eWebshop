@using Shared.Contracts.Response;
@model ProductResponseDto[]
@{
    ViewData["Title"] = "Index";
}

    
<div class="row pb-3">
    @foreach (var product in Model)
    {
        {
            string formattedPrice = product.ProductPrice % 1 == 0
            ? product.ProductPrice.ToString("0")
            : product.ProductPrice.ToString("0.00");
        


            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1 " style="border:1px solid #008cba; border-radius: 5px;">
                        <div class="card">
                            <img src="~/images/@(product.ProductId).jpg" class="card-img-top rounded" /> 
                            @*300*382px*@
                            <div class="pl-1">
                                <p class="card-title h5 text-primary p-lg-1">@product.ProductName</p>
                            <p class="card-title text-secondary p-lg-1">@formattedPrice EUR</p>
                            </div>
                        </div>
                        <div>
                            <a class="btn btn-primary form-control mt-1">Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
}

</div>

    <table class="table table-table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th width="10%">
                    Product Id
                </th>
                <th width="50%">
                    Product Name
                </th>
                <th width="10%">
                    Product Reference
                </th>
                <th width="10%">
                    Product Price
                </th>
                <th width="10%">
                    Product Quantity
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td width="10%">
                        @product.ProductId
                    </td>
                    <td width="50%">
                        @product.ProductName
                    </td>
                    <td width="10%">
                        @product.ProductReference
                    </td>
                    <td width="10%">
                        @product.ProductPrice
                    </td>
                    <td width="10%">
                        @product.ProductQuantity
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group" width="10%">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-secondary"><i class="bi bi-pencil"></i>&nbsp; Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group" width="10%">
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-secondary"><i class="bi bi-trash3"></i>&nbsp; Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

